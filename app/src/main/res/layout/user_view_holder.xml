<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/user_name"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_name_title"
        android:layout_toEndOf="@id/user_name_title"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/user_ip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_title"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/ip"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/user_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_title"
        android:layout_alignTop="@id/user_ip_title"
        android:layout_toEndOf="@id/user_ip_title"
        android:textSize="@dimen/text_size_medium" />

</RelativeLayout>